@page
@model DotNetCrud.Pages.Admin.Products.IndexModel
@{
}

<h2 class="text-center mb-5">List Of Products</h2>

<div class="container text-center">
    <div class="row g-2 mb-3">
        <div class="col-6">
            <a class="btn btn-primary" href='/Admin/Products/Create'>New Product</a>
        </div>
    </div>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Brand</th>
            <th>Category</th>
            <th>Price</th>
            <th>Description</th>
            <th>Image</th>
            <th>Created At</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.Products)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.Name</td>
                <td>@product.Brand</td>
                <td>@product.Category</td>
                <td>@product.Price$</td>
                <td>@product.Description</td>
                <td><img src="@product.ImageFileName" width="100" /></td>
                <td>@product.CreatedAt.ToString("MM/dd/yyyy")</td>
                <td style="white-space:nowrap">
                    <a class="btn btn-primary btn-sm" href="/Admin/Products/Edit?id=@product.Id">Edit</a>
                    <a class="btn btn-danger btn-sm" href="/Admin/Products/Delete?id=@product.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>